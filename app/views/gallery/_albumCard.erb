<% image = album.photos.find_by_id(album.cover) || album.photos.first  %>
<% image_url = image ? image.file.url(:medium) : image_path("missing-image.png")  %>

<div class = 'album-card thumbnail'>
  <img src="<%= image_url %>" alt=""/>
  <div class = 'album-card caption'>
    <h3><%= album.name %></h3>
  </div>
</div>