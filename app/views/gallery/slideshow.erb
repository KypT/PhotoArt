<% content_for :controls do %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Выбрать альбом<span class="caret"></span></a>
      <ul class="dropdown-menu" role="menu">
        <% @albums.each do | album | %>
            <li><a href = '<%= album.id %>'><%= album.name %></a></li>
        <% end %>
        <%= yield :controls %>
      </ul>
    </li>
    <li><%= params[:id] %></li>
<% end %>

<% content_for :assets do %>
    <%= stylesheet_link_tag 'supersized' %>
    <%= stylesheet_link_tag 'supersized.shutter' %>
    <%= javascript_include_tag 'jquery.easing.min' %>
    <%= javascript_include_tag 'supersized.3.2.7' %>
    <%= javascript_include_tag 'supersized.shutter' %>
<% end %>

<script type="text/javascript" charset="utf-8">
    var slides = [
        <% if @album %>
            <% @album.photos.order(:sort).each do | photo | %>
            { image: '<%= photo.file.url %>', title: '<%= photo.name %>', thumb: '<%= photo.file.url :small %>', url: '' },
            <% end %>
        <% end %>
    ]
</script>

<div class = 'gallery-go-back'>
  <%= link_to action: 'index' do %>
      <span class="glyphicon glyphicon-chevron-left"></span>
      Другие альбомы
  <% end %>
</div>

<!--Thumbnail Navigation-->
<div id="prevthumb"></div>
<div id="nextthumb"></div>

<!--Arrow Navigation-->
<a id="prevslide" class="load-item"></a>
<a id="nextslide" class="load-item"></a>

<div id="thumb-tray" class="load-item">
  <div id="thumb-back"></div>
  <div id="thumb-forward"></div>
</div>

<!--Control Bar-->
<div id="controls-wrapper" class="load-item">
  <div id="controls">

    <!--Slide counter-->
    <div id="slidecounter">
      <span class="slidenumber"></span> / <span class="totalslides"></span>
    </div>

    <!--Slide captions displayed here-->
    <div id="slidecaption"></div>

    <!--Thumb Tray button-->
    <a id="tray-button">Все фотографии <span class = 'glyphicon glyphicon-menu-hamburger'></span></a>

  </div>
</div>