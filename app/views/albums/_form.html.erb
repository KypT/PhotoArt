<% if @album.errors.any? %>
    <div class="alert alert-danger" role="alert">
      Не удалось сохранить альбом:
      <ul>
        <% @album.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for @album, remote: data_remote, :html => {class: 'form-horizontal'} do |f| %>

    <div class="form-group">
        <div class = 'row'>
          <div class = 'col-md-1 col-md-offset-1'>
            <h4>Альбом</h4>
          </div>
          <div class = 'col-sm-2'>
            <%= f.text_field :name, class: 'col-sm-7 form-control' %>
          </div>
          <div class = 'col-sm-8'>
            <%= f.submit data_btn , remote: true, class: 'btn btn-primary btn-large' %>
            <%= link_to 'Вернуться', admin_path, class: 'btn btn-primary' %>
          </div>
        </div>
    </div>

<% end %>