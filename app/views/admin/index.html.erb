    <div class = 'col-md-8'>
      <div class="jumbotron">
        <h2> Альбомы: </h2>
        <div class = 'row'>
        <% @albums.each do | album | %>
            <div class = 'col-md-4'>
              <a href="<%= edit_album_path album %>">
                <img src="" alt="" class="img-thumbnail" style = 'height: 200px; width: 200px;'>
              </a>
            </div>
        <% end %>
        </div>
      </div>
    </div>
    <div class = 'col-md-4'>
      <div class="jumbotron">
        <h2>Администрирование</h2>
        <p><a class="btn btn-primary btn-lg" href="<%= sections_path %>" role="button">Редактировать секции сайта</a></p>
        <p><a class="btn btn-primary btn-lg" href="<%= new_article_path %>" role="button">Добавить новость</a></p>
        <p><a class="btn btn-primary btn-lg" href="<%= articles_path %>" role="button">Редактировать новости</a></p>
      </div>
    </div>
  </div>
