<div class = 'container-fluid'>
  <div class = 'row'>
    <div class = 'col-md-8'>
      <div class="jumbotron admin-panel">
        <h2>
          Альбомы:
          <a class="btn btn-success" href="<%= new_admin_album_path %>" role="button">Добавить альбом</a>
        </h2>
        <div class = 'row'>
        <% @albums.each do | album | %>
              <div class = 'album col-md-4'>
                <%= link_to edit_admin_album_path album do %>
                    <%= render partial: 'gallery/albumCard', locals: {album: album} %>
                <% end %>
              </div>
        <% end %>
        </div>
      </div>
    </div>
    <div class = 'col-md-4'>
      <div class="jumbotron admin-panel">
        <h2>Администрирование</h2>
        <p><a class="btn btn-primary btn-lg" href="<%= admin_sections_path %>" role="button">Редактировать секции сайта</a></p>
        <p><a class="btn btn-primary btn-lg" href="<%= new_admin_article_path %>" role="button">Добавить новость</a></p>
        <p><a class="btn btn-primary btn-lg" href="<%= admin_articles_path %>" role="button">Редактировать новости</a></p>
      </div>
    </div>
  </div>
</div>