<% if @section.errors.any? %>
    <div class="alert alert-danger" role="alert">
      Не удалось сохранить альбом:
      <ul>
        <% @section.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for [:admin, @section], :html => {class: 'form-horizontal'} do |f| %>

    <div class="form-group">
      <div class="field">
        <%= f.label :name, 'Название:', class: 'col-sm-2 control-label' %>
        <div class = 'col-sm-8'>
          <%= f.text_field :name, class: 'col-sm-10 form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :url, 'Путь:', class: 'col-sm-2 control-label' %>
        <div class = 'col-sm-8'>
          <%= f.text_field :url, class: 'col-sm-10 form-control' %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Сохранить" , class: 'btn btn-success' %>
    </div>

<% end %>