<% if @article.errors.any? %>
    <div class="alert alert-danger" role="alert">
      Не удалось сохранить альбом:
      <ul>
        <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for [:admin, @article], html:  {class: 'form-horizontal'} do |f| %>

    <div class = 'row'>
      <div class = 'col-md-8'>
        <div class="form-group">
          <div class="field">
            <%= f.label :title, 'Заголовок:', class: 'col-sm-2 control-label' %>
            <div class = 'col-sm-8'>
              <%= f.text_field :title, class: 'col-sm-10 form-control' %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :content, 'Содержание:', class: 'col-sm-2 control-label' %>
            <div class = 'col-sm-8'>
              <%= f.text_area :content, class: 'col-sm-10 form-control' %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :photo, 'Фотография:', class: 'col-sm-2 control-label' %>
            <div class = 'col-sm-8'>
              <%= f.file_field :photo, class: 'col-sm-10' %>
            </div>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Сохранить" , class: 'btn btn-success' %>
        </div>
      </div>

      <% image_url = @photo ? @photo.file.url(:medium) : image_path("missing-image.png") %>
      <div class = 'col-md-4'>
        <div class="thumbnail">
          <img src="<%= image_url %>" alt=""/>
        </div>
      </div>
    </div>
<% end %>