<div class = 'container'>
  <h1>Список секций</h1>

  <% if flash[:notice] %>
      <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
  <% end %>

  <table class = "table table-hover">
    <thead>
    <tr>
      <th>Название</th>
      <th>Путь</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @sections.each do |section| %>
        <tr>
          <td><%= section.name%></td>
          <td><%= section.url%></td>
          <td>
            <%= link_to 'Редактировать', edit_section_path(section), {class: 'btn btn-primary'} %>
            <%= link_to 'Удалить', section, method: :delete, class: 'btn btn-danger', data: { confirm: 'Точно?'} %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Добавить секцию', new_section_path, {class: 'btn btn-success'} %>
  <%= link_to 'Вернуться', admin_path, {class: 'btn btn-success'} %>
</div>
