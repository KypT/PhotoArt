<!DOCTYPE html>
<html>
<head>
  <title>PhotoArt</title>
  <%= stylesheet_link_tag 'bootstrap-theme.min' %>
  <%= stylesheet_link_tag 'bootstrap.min' %>
  <%= stylesheet_link_tag "application", params[:controller] %>


  <%= javascript_include_tag 'bootstrap.min' %>
  <%= javascript_include_tag "application", params[:controller] %>

  <%= yield :assets %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Всеволод Тоботрас</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
            <% @sections.each do | section | %>
                <li><a href = '<%=section.url%>'><%=section.name%></a></li>
            <% end %>
          <%= yield :controls %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? and controller.is_a? AdminController %>
            <li><%= link_to('Выйти', destroy_user_session_path, :method => :delete) %></li>
        <% else %>
            <li><a href="/admin">Войти</a></li>
        <% end %>
      </ul>
    </div>
</nav>

<%= yield %>

</body>
</html>
