<div class = "panel panel-default">
  <div class = 'panel-heading'>
    <%= link_to article_path id: article.id, section: article.section do %>
        <h3 class = "article-title"><%= article.title %></h3>
    <% end %>
    <div class = 'article-date title'><%= article.created_at.to_s[0..10] %></div>
  </div>
  <div class = 'panel-body'>
    <div class = "article-text <%= 'short' if short %>"><%= article.content.html_safe %></div>
    <%= link_to 'Читать дальше...', article_path(id: article.id, section: article.section), class: 'read-more' %>
    <hr/>
    <div class = 'social'>
      <a class="link btn-discuss" role="button" data-messages="<%= article.discussion.messages.count %>" data-id = '<%= article.discussion.id %>' data-toggle="modal" data-target="#discussion-modal">Обсудить <span class="badge"><%= article.discussion.messages.count %></span></a>
      <div class="fb-like" data-href="<%= root_url[0..-2] + article_path(section: article.section, id: article.id) %>" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
    </div>
  </div>
</div>