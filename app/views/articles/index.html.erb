<div class = 'container'>
  <h1>Список новостей</h1>

  <% if flash[:notice] %>
      <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
  <% end %>

  <table class = "table table-hover">
    <thead>
    <tr>
      <th>Заголовок</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% @articles.each do | article | %>
        <tr>
          <td><%= article.title%></td>
          <td>
            <%= link_to 'Редактировать', edit_article_path(article), {class: 'btn btn-primary'} %>
            <%= link_to 'Удалить', article, method: :delete, class: 'btn btn-danger', data: { confirm: 'Точно?'} %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Добавить новость', new_article_path, {class: 'btn btn-success'} %>
  <%= link_to 'Вернуться', admin_path, {class: 'btn btn-success'} %>
</div>
