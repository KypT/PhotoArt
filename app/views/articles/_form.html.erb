<% if @article.errors.any? %>
    <div class="alert alert-danger" role="alert">
      Не удалось сохранить альбом:
      <ul>
        <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for @article, :html => {class: 'form-horizontal'} do |f| %>

    <div class="form-group">
      <div class="field">
        <%= f.label :title, 'Заголовок:', class: 'col-sm-2 control-label' %>
        <div class = 'col-sm-8'>
          <%= f.text_field :title, class: 'col-sm-10 form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :content, 'Содержание:', class: 'col-sm-2 control-label' %>
        <div class = 'col-sm-8'>
          <%= f.text_area :content, class: 'col-sm-10 form-control' %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Сохранить" , class: 'btn btn-success' %>
    </div>

<% end %>