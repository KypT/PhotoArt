<% if @event.errors.any? %>
    <div class="alert alert-danger" role="alert">
      Не удалось сохранить статью:
      <ul>
        <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for @event, url: {action: @action}, html:  {class: 'form-horizontal'} do |f| %>
    <div class="form-group">
      <div class="field">
        <%= f.label :title, 'Заголовок:', class: 'col-sm-1 control-label' %>
        <div class = 'col-sm-4'>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :content, 'Содержание:', class: 'col-sm-1 control-label' %>
        <div class = 'col-sm-11'>
          <%= f.cktext_area :content, :class => 'col-sm-11 form-control', :ckeditor => {:language => 'ru'} %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Сохранить" , class: 'btn btn-success' %>
    </div>
<% end %>